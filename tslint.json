{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-no-unused-expression-chai"
  ],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "interface-name": false,
    "max-classes-per-file": false,
    "no-bitwise": false,
    "no-console": false
  }
}
